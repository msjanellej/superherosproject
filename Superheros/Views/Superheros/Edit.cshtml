@model Superheros.Models.Superhero

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Superhero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SuperheroName" />
            <div class="form-group">
                <label asp-for="AlterEgoName" class="control-label"></label>
                <input asp-for="AlterEgoName" class="form-control" />
                <span asp-validation-for="AlterEgoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimarySuperAbility" class="control-label"></label>
                <input asp-for="PrimarySuperAbility" class="form-control" />
                <span asp-validation-for="PrimarySuperAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondarySuperAbility" class="control-label"></label>
                <input asp-for="SecondarySuperAbility" class="form-control" />
                <span asp-validation-for="SecondarySuperAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catchphrase" class="control-label"></label>
                <input asp-for="Catchphrase" class="form-control" />
                <span asp-validation-for="Catchphrase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <img src="~/lib/black-batman.webp" alt="Batman" style="width:400px;height:auto;" />
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
